doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Update Sales
  link(rel='stylesheet' href='/css/sales.css')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet')
.work
  .container-mb-6
    form#registrationForm(action='/sales/updateSale?id='+sale._id onsubmit='return formValidate()' method='post')
      h2#h2  Update Sales Form
      .mb-3
        label(for='buyerName') Buyer&apos;s Name
        input#buyerName.form-control(name='buyerName' value=sale.buyerName)
      .mb-3
        label(for='produceName') Produce Name
        input#produceName.form-control(name='produceName' value=sale.produceName )
      .mb-3
        label(for='quantity') Quantity purchased
        input#quantity.form-control(name='quantity' value=sale.quantity)
      .mb-3
        label(for='amount') Amount paid in Ugx
        input#amount.form-control(name='amount' value=sale.amount)
      .mb-3
        label(for='branch') Branch
        input#branch.form-control(name='branch' value=sale.branch)
      div
        button#button.btn.btn-primary(type='submit') Submit
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
script(src='/js/sales.js')

