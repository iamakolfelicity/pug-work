doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Sign-Up
    link(rel='stylesheet' href='/css/signup.css')
    link(rel='stylesheet' href='/css/css/bootstrap.css')
  body
    .container.mt-4
      form(action='/signup' method='POST' onsubmit="return formValidate()")
        .card(style='background-color: rgba(255, 255, 255, 0.637);')
          h2.text-center Sign-Up
          br
          br
          .row
            .col-md-6.form-group
              label(for='fullname') Full Name
              input#fullname.form-control(type='text' placeholder='Enter full name' name='full_name')
              small#fullname-error.text-danger
            .col-md-6.form-group
              label(for='phone') Phone Number
              input#phone.form-control(type='text' placeholder='Enter phone number' name='phone_number')
              small#phone-error.text-danger
          br
          .form-group
            label(for='email') Email Address
            input#email.form-control(type='email' placeholder='Enter email' name='email')
            small.form-text.text-muted We'll never share your email with anyone else.
            small#email-error.text-danger
          br
          .form-group
            label(for='password') Password
            input#password.form-control(type='password' placeholder='Enter password' name='password')
            small.form-text.text-muted Please enter a strong password.
            small#password-error.text-danger
          br
          .form-group
            label(for='position') Position
            select#position.form-control(name='position')
              option(value='Select your role') Select your role
              option(value='director') Director
              option(value='manager') Manager
              option(value='sales_agent') Sales Agent
            small#position-error.text-danger
          br
          .form-group
            label(for='branch') Branch
            select#branch.form-control(name='branch')
              option(value='' disabled selected) Select your branch
              option(value='Maganjo') Maganjo
              option(value='Matugga') Matugga
              option(value='none') None
            small#branch-error.text-danger
          br
          .form-group
            input#terms(type='checkbox' name='terms')
            label(for='terms') I accept the Terms & Conditions
            small#terms-error.text-danger
          br
          br
          button.btn.btn-primary.mt-3(type='submit') Sign Up
      br
      br
    script(src='/js/signup.js')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
