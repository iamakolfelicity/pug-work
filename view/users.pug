doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Document
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='/css/saleslist.css')
  body
    .container
      nav.navbar.navbar-expand-lg.bg-body-tertiary
        .container
          a.navbar-brand(href='/') Home
          button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon
          #navbarNav.collapse.navbar-collapse
            ul.navbar-nav
              li.nav-item
                a.nav-link.active(aria-current='page' href='/sales/registerSales') Sales registration
              li.nav-item
                a.nav-link(href='#') My account
              li.nav-item
                a.nav-link(href='/') Log out
              li.nav-item
                a.nav-link.disabled(aria-disabled='true') Sales List

      table.table
        thead
          tr
            th Profile Picture
            th User Name
            th Position
            th Branch
            th Phone Number
        tbody
          if users.length
            each user in users
              tr
                td #{user.full_name}
                td #{user.position}
                td #{user.branch}
                td #{user.phone_number}
          else
            tr
              td(colspan="5").text-center.text-muted No users found.

     

