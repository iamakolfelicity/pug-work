doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Register Sales
    link(rel='stylesheet' href='/css/sales.css')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet')
  body
    .work
      // Navbar (inside .work)
      nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
        .container-fluid
          a.navbar-brand(href='/') Sales Dashboard
          button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-icon
          #navbarNav.collapse.navbar-collapse
            ul.navbar-nav.ms-auto
              li.nav-item
                a.nav-link.active(aria-current='page', href='/sales/registerSales') Register Sale
              li.nav-item
                a.nav-link(href='/sales/salesList') Sales List
              li.nav-item
                a.nav-link(href='/creditRegister') Deferred payment
              li.nav-item
                a.nav-link(href='/') Log Out

      // Registration Form
      .container.mb-4
        form#registrationForm(onsubmit='return formValidate()' method='post' action='/sales/registerSales')
          h2#h2 Sales Registration Form

          .mb-3
            label(for='buyerName') Buyer's Name
            input#buyerName.form-control(type='text' name='buyerName' placeholder="Customer's name")
            span#buyerNameError.text-danger

          .mb-3
            label(for='produceName') Produce Name
            input#produceName.form-control(type='text' name='produceName' placeholder='Produce name')
            span#produceNameError.text-danger

          .mb-3
            label(for='quantity') Quantity Purchased
            input#quantity.form-control(type='number' name='quantity' placeholder='Tonnes in kgs')
            span#quantityError.text-danger

          .mb-3
            label(for='amount') Amount Paid in UGX
            input#amount.form-control(type='number' name='amount' placeholder='Amount')
            span#amountError.text-danger

          .mb-3
            label(for='branch') Branch
            input#branch.form-control(type='text' name='branch' placeholder='Branch')
            span#branchError.text-danger

          .mb-3
            label(for='date') Date
            input#date.form-control(type='date' name='date')
            span#dateError.text-danger

          .mb-3
            label(for='time') Time
            input#time.form-control(type='time' name='time')
            span#timeError.text-danger

          .mb-3
            label(for='agentName') Sales Agent's Name
            input#agentName.form-control(type='text' name='agentName' placeholder="Sales agent's name")
            span#agentError.text-danger

          div
            button#button.btn(type='submit') Submit

    // Scripts
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
    script(src='/js/sales.js')
